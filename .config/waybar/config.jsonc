{
    "position": "top",
    "height": 24,
    "spacing": 4,

    "modules-left": ["hyprland/workspaces", "custom/tailscale"],
    "modules-center": ["clock"],
    "modules-right": ["custom/keymap", "tray", "pulseaudio","memory","battery","network"],

    // Moduli al livello root

    "custom/tailscale": {
        "exec": "~/.config/waybar/scripts/tailscale-status.sh",
        "return-type": "json",
        "interval": 5,
        "on-click": "~/.config/waybar/scripts/tailscale-toggle.sh",
        "signal": 8,
        "format": "{}"
    },

    "clock": {
        "format": "{:%d - %H:%M}"
    },

    "custom/keymap": {
        "format": "‚å® {}",
        "exec": "~/.config/waybar/scripts/keymap.sh",
        "interval": 2,
        "on-click": "~/.config/waybar/scripts/keymap.sh toggle"
    },
    
    "pulseaudio": {
        "format": "ÔÄ® {volume}%",
        "format-muted": "ÔÄ¶ Muto",
        "on-click": "pavucontrol",
        "on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +5%",
        "on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -5%"
    },

    "memory": {
        "format": "{used:0.1f}G/{total:0.1f}G",
        "interval": 30
    },

    "battery": {
        "states": {"warning":30,"critical":15},
        "format": "{icon} {capacity}%",
        "format-charging": "‚ö° {capacity}%",
        "format-plugged": "üîå {capacity}%",
        "format-icons": ["ÔâÑ","ÔâÉ","ÔâÇ","ÔâÅ","ÔâÄ"],
        "interval": 60
    },

    "network": {
        "format-wifi": "Ôá´ {essid}",
        "format-ethernet": "Ôûñ Cavo",
        "format-disconnected": "ÔÅ± Disconnesso",
        "on-click": "nmtui"
    },

    "hyprland/workspaces": {
        "format": "{name}",
        "on-click": "activate",
        "persistent-worksets": ["*"]
    }
}

