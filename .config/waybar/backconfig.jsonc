{
    "position": "top",
    "height": 24,
    "spacing": 4,

    "modules-left": ["hyprland/workspaces"],
    "modules-center": ["clock"],
    "modules-right": ["custom/keymap", "pulseaudio","memory","battery","network"],

    // Moduli al livello root
    "clock": {
        "format": "{:%d - %H:%M}"
    },

    "custom/keymap": {
    "format": "âŒ¨ {}",
    "exec": "~/.config/waybar/scripts/keymap.sh",
    "interval": 2,
    "on-click": "~/.config/waybar/scripts/keymap.sh toggle"
    },
    
    "pulseaudio": {
        "format": "ï€¨ {volume}%",
        "format-muted": "ï€¦ Muto",
        "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
        "on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +5%",
        "on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -5%"
    },

    "memory": {
        "format": "{used:0.1f}G/{total:0.1f}G",
        "interval": 30
    },

    "battery": {
        "states": {"warning":30,"critical":15},
        "format": "{icon} {capacity}%",
        "format-charging": "âš¡ {capacity}%",
        "format-plugged": "ğŸ”Œ {capacity}%",
        "format-icons": ["ï‰„","ï‰ƒ","ï‰‚","ï‰","ï‰€"],
        "interval": 60
    },

    "network": {
        "format-wifi": "ï‡« {essid}",
        "format-ethernet": "ï– Cavo",
        "format-disconnected": "ï± Disconnesso",
        "on-click": "nmtui"
    },

    "hyprland/workspaces": {
        "format": "{name}",
        "on-click": "activate",
        "persistent-worksets": ["*"]
    }
}

